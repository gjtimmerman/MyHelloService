<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>
    <system.serviceModel>
        <bindings>
            <customBinding>
                <binding name="CustomBinding_IHello">
                    <binaryMessageEncoding />
                    <httpTransport />
                </binding>
            </customBinding>
        </bindings>
        <client>
            <endpoint address="http://localhost:8080/Hello" binding="customBinding"
                bindingConfiguration="CustomBinding_IHello" contract="MyHelloNamespace.IHello"
                name="CustomBinding_IHello" />
        </client>
    </system.serviceModel>
</configuration>